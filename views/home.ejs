<%- include("./partials/header") %>

<main class="container mx-auto my-16 px-6 lg:px-16">
    <!-- Hero Section -->
    <section class="hero bg-gray-100 py-16 rounded-xl shadow-neumorphic">
        <div class="flex flex-col lg:flex-row items-center justify-between gap-12">
            <!-- Hero Image -->
            <div class="w-full lg:w-1/2">
                <img src="https://images.unsplash.com/photo-1448582649076-3981753123b5?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" height="500px" width="500px" alt="Featured Bag" class="w-full h-auto rounded-lg shadow-neumorphic-inner object-cover">
            </div>
            <!-- Hero Content -->
            <div class="w-full lg:w-1/2">
                <h1 class="text-5xl font-extrabold text-gray-900 mb-6 leading-tight">
                    Elevate Your Style with Our Premium Bags
                </h1>
                <p class="text-lg text-gray-700 mb-6">
                    Discover our exclusive collection of premium bags that blend luxury, functionality, and timeless elegance.
                </p>
                <a href="/shop" class="neumorphic-btn-blue text-lg py-4 px-8 inline-block">Shop Now</a>
            </div>
        </div>
    </section>

    <!-- Featured Products Section -->
    <section class="mt-20">
        <h2 class="text-3xl font-bold text-gray-900 mb-10 text-center">Featured Collections</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Product 1 -->
            <% if(products.length > 0){%>
                <% let count =0%>
                <%products.forEach(function(product) { %>
                    <% if(count < 3 ){%>
                    <div class="bg-gray-100 rounded-lg shadow-neumorphic flex flex-col items-center p-6 transform hover:-translate-y-2 transition duration-300">
                        <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product 1" class="w-60 h-60 object-contain rounded-lg shadow-neumorphic-inner mb-6">
                        <h3 class="text-xl font-semibold text-gray-800 mb-2"></h3>
                        <p class="text-gray-600 mb-4">â‚¹<%=product.price%></p>
                        <a href="/shop" class="neumorphic-btn-blue text-md py-2 px-6">View Details</a>
                    </div>
                        <% count++;}%>
                    <% })%>
                    <% } else { %>
                        <div class="col-span-full flex justify-center items-center">
                            <h1 class="text-2xl font-semibold text-gray-600 bg-gray-200 py-10 px-20 rounded-lg shadow-md neomorphic-card">
                                No Items Available
                            </h1>
                        </div>
                    <% } %>  
        </div>
    </section>
</main>
<%- include("./partials/footer") %>