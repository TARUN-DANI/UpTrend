
<%- include('./partials/header') %>

<% if(success.length > 0){ %>
    <div class=" z-40 fixed top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-blue-500 shadow-neumorphic">
        <span class="inline-block text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container mx-auto px-4 py-8 md:px-10 md:py-20 flex flex-grow">
        <aside class="w-full md:w-1/4 flex flex-col space-y-4">
            <div class="bg-white p-6 rounded-lg shadow-neumorphic">
                <h2 class="text-xl font-bold mb-4">Product Management</h2>
                <a class="block text-lg font-medium text-gray-700 hover:text-blue-500 transition p-2 rounded-lg shadow-neumorphic" href="/owners/products">All Products</a>
            </div>
        </aside>
        <main class="w-full md:w-3/4 bg-white p-8 rounded-lg shadow-neumorphic ml-4">
            <h2 class="text-2xl font-bold mb-6">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-xl font-semibold mb-4">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded-lg border border-gray-300 bg-gray-100 shadow-neumorphic">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name" class="border p-3 rounded-lg w-full bg-gray-100 shadow-neumorphic">
                        <input name="price" type="text" placeholder="Product Price" class="border p-3 rounded-lg w-full bg-gray-100 shadow-neumorphic">
                        <input name="discount" type="text" placeholder="Discount Price" class="border p-3 rounded-lg w-full bg-gray-100 shadow-neumorphic">
                    </div>
                </div>

                <div>
                    <h3 class="text-xl font-semibold mb-4">Panel Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input name="bgcolor" type="text" placeholder="Background Color" class="border p-3 rounded-lg w-full bg-gray-100 shadow-neumorphic">
                        <input name="panelcolor" type="text" placeholder="Panel Color" class="border p-3 rounded-lg w-full bg-gray-100 shadow-neumorphic">
                        <input name="textcolor" type="text" placeholder="Text Color" class="border p-3 rounded-lg w-full bg-gray-100 shadow-neumorphic">
                    </div>
                </div>
                <input class="px-5 py-2 rounded-lg mt-6 bg-blue-500 text-white shadow-neumorphic hover:bg-blue-600 transition" type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>