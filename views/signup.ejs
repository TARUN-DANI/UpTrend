<%- include("./partials/header") %>
<% if(error.length > 0) { %>
    <div class="fixed z-30 top-5 left-1/2 transform -translate-x-1/2 p-4 mr-7 rounded-md bg-red-500 shadow-lg shadow-red-700">
        <span class="inline-block text-white font-semibold">
            <%= error %>
        </span>
    </div>
<% } %>

<!-- Form Container -->
<div class="flex justify-center items-center min-h-screen bg-gray-100 p-4">
    <!-- Create Account Section -->
    <div class="flex flex-col w-full max-w-sm p-6 rounded-lg bg-gray-100 shadow-lg neomorphic-card">
        <div class="text-3xl font-bold text-gray-800 text-center mt-8">Welcome to <span class="text-blue-500 font-medium">UpTrend</span></div>
        <div class="text-xl pt-2 text-gray-600 text-center">Create your account</div>
        <form class="flex flex-col gap-4 pt-5 w-full" action="users/register" method="post">
            <input class="bg-zinc-100 px-4 py-2 rounded-full outline-none neomorphic-input" type="text" placeholder="Fullname" name="fullname" required>
            <input class="bg-zinc-100 px-4 py-2 rounded-full outline-none neomorphic-input" type="email" placeholder="Email" name="email" required>
            <input class="bg-zinc-100 px-4 py-2 rounded-full outline-none neomorphic-input" autocomplete="current-password" type="password" placeholder="Password" name="password" required>
            <input class="bg-blue-500 text-white px-4 py-2 rounded-full cursor-pointer shadow-lg neomorphic-btn" type="submit" value="Create My Account">
            <div class="text-center pt-4">Existing User? <a href="/" class="text-blue-500 underline">Login</a></div>
        </form>
    </div>
</div>



<%- include("./partials/footer") %>